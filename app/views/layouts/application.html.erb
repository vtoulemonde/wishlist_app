<!DOCTYPE html>
<html>
<head>
  <title>Wishlist</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Fixed navbar -->
<div class="navbar navbar-default navbar-fixed-top custom" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>

      </button>
      <%= link_to "MyWishList", root_path, class: "navbar-brand"%>
    </div>
    <div class="navbar-collapse collapse">
      <% if logged_in? %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "NEW LIST", new_list_path %></li>
        <li><%= link_to "ALL MY LISTS", lists_path %></li>
        <li><%= link_to "SETTINGS", edit_user_path(current_user) %></li>
        <li class="active"><%= link_to 'LOG OUT', sessions_path, method: :delete %></li>
      </ul>
      <% end %>
    </div><!--/.nav-collapse -->
  </div><!-- /container -->
</div><!-- /navbar -->

<div class="container">
  <br><br><br><br>

  <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: "alert alert-#{name}"%>
  <% end %>

  <%= yield %>

</div> <!-- /container -->

</body>
</html>
